<!--index.wxml-->

<swiper indicator-dots="{{indicatorDots}}" vertical="{{vertical}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}" circular="true" style="height:{{second_height}}px;width:100%;">
  <block wx:for="{{background}}">
    <swiper-item>
      <image src="{{item}}" mode="widthFix" />
    </swiper-item>
  </block>
</swiper>